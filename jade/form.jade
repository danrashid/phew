extends index

block title
  title phew | form

block scripts
  script(type="text/javascript" src="js/disabled.js")
  script(type="text/javascript" src="js/form.js")
  script(type="text/javascript" src="js/switch.js")

block content
  h1 Form

  .caution.message Add <code>[novalidate]</code> to the form to bypass browser-native validation
    | and use this library instead.

  .row
    .col-3.tabs
      a(href="#checkboxes") Checkboxes
      a(href="#email-address") Email address
      a(href="#more-types") More types
      a(href="#radios") Radios
      a(href="#select") Select

    .col-9

      .tab-content#checkboxes
        h2 Checkboxes

        .message Use <code>fieldset[required]</code> to require a selection.

        form(novalidate)
          .row
            .col-6
              fieldset
                legend Checkboxes
                ul
                  li
                    label
                      input(type="checkbox" name="checkboxes")
                      |  Foo
                  li
                    label
                      input(type="checkbox" name="checkboxes")
                      |  Bar
                  li
                    label
                      input(type="checkbox" name="checkboxes")
                      |  Baz

            .col-6
              fieldset(required)
                legend Checkboxes
                  .required Required
                ul
                  li
                    label
                      input(type="checkbox" name="required-checkboxes")
                      |  Foo
                  li
                    label
                      input(type="checkbox" name="required-checkboxes")
                      |  Bar
                  li
                    label
                      input(type="checkbox" name="required-checkboxes")
                      |  Baz
              .error Select at least one checkbox

          .row
            .col-6
              fieldset
                legend Switches
                ul
                  li
                    label.switch
                      input(type="checkbox" name="switches")
                      |  Foo
                  li
                    label.switch
                      input(type="checkbox" name="switches")
                      |  Bar
                  li
                    label.switch
                      input(type="checkbox" name="switches")
                      |  Baz

            .col-6
              fieldset(required)
                legend Switches
                  .required Required
                ul
                  li
                    label.switch
                      input(type="checkbox" name="required-switches")
                      |  Foo
                  li
                    label.switch
                      input(type="checkbox" name="required-switches")
                      |  Bar
                  li
                    label.switch
                      input(type="checkbox" name="required-switches")
                      |  Baz
              .error Select at least one switch

          .row
            .col-12
              button(type="submit") Test checkboxes

      .tab-content#email-address
        h2 Email address

        .message <code>[data-match-id]</code> needs to match an <code>input[id]</code> for confirmation fields.

        form(novalidate)
          .row
            .col-6
              label A required email address
                .required Required
                input#email(type="email" required)
                .error Enter a valid email address
            .col-6
              label Confirm email address
                .required Required
                input(type="email" data-match-id="email")
                .error Email addresses don’t match
          .row
            .col-12
              button(type="submit") Test email address

      .tab-content#more-types
        h2 More types

        form(novalidate)
          .row
            .col-6
              label Some required text
                .required Required
                input(type="text" required)
                .error Enter some text
            .col-6
              label An optional loose numeric value
                input(type="numeric")
                .error Enter a numeric value
          .row
            .col-12
              button(type="submit") Test these types

      .tab-content#radios
        h2 Radios

        .message Radios should just default to the first option. “Required” is implied.

        form(novalidate)
          .row
            .col-12
              fieldset
                legend Radio
                  .required Required
                ul
                  li
                    label
                      input(type="radio" name="the-radio" checked)
                      |  Foo
                  li
                    label
                      input(type="radio" name="the-radio")
                      |  Bar
                  li
                    label
                      input(type="radio" name="the-radio")
                      |  Baz

      .tab-content#select
        h2 Select

        .message Required selections should just default to the first option.

        form(novalidate)
          .row
            .col-6
              label A required selection
                .required Required
                select
                  option foo
                  option bar
                  option baz
            .col-6
              label An optional selection
                select
                  option(disabled selected) Select somthing if you want…
                  option foo
                  option bar
                  option baz
